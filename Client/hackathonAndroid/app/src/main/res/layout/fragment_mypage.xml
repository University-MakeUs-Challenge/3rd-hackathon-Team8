<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/mypage_container"
        android:elevation="20dp"
        android:paddingTop="19dp"
        android:paddingBottom="19dp"
        app:layout_constraintCircleRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mypage_pic" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:text="id"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/tv_nickname"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="2dp"
            android:text="닉네임"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/tv_name"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tv_id" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="2dp"
            android:text="본명"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/tv_alcohol"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tv_nickname" />

        <TextView
            android:id="@+id/tv_alcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="2dp"
            android:text="주량"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_profile"
            android:layout_width="93dp"
            android:layout_height="38dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#F2EBEB"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            android:text="프로필 수정"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:cornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.482"
            tools:ignore="TouchTargetSizeCheck"
            android:insetLeft="0dp"
            android:insetRight="0dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="전적"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/tv_winlose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="n승 | n패"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <View
        android:id="@+id/sep_line"
        android:layout_width="358dp"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="#dedede"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_winlose">

    </View>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_badge_cf"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="18dp"
        android:backgroundTint="#F2EBEB"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="전체 뱃지 확인"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sep_line"
        tools:ignore="TouchTargetSizeCheck"
        android:insetLeft="0dp"
        android:insetRight="0dp"/>

    <TextView
        android:id="@+id/tv_my_badge"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="나의 대표 뱃지"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sep_line"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_badge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:text="대표 뱃지 이름"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sep_line"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/iv_badge"
        android:layout_width="76dp"
        android:layout_height="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_badge"
        tools:layout_editor_absoluteY="391dp"
        app:layout_constraintTop_toTopOf="@+id/tv_my_badge"
        android:layout_marginTop="26dp"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022-11-13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_badge_title" />

    <ImageView
        android:id="@+id/badge_1"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginEnd="27dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/badge_3"
        app:srcCompat="@drawable/ic_badge"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/badge_3"
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/badge_1"
        app:layout_constraintStart_toEndOf="@+id/badge_2"
        app:srcCompat="@drawable/ic_badge"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/badge_2"
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/badge_3"
        app:layout_constraintStart_toEndOf="@+id/badge_"
        app:srcCompat="@drawable/ic_badge"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/badge_"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="27dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toStartOf="@+id/badge_2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_badge"
        android:layout_marginBottom="16dp"/>

    <View
        android:id="@+id/view"
        android:layout_width="358dp"
        android:layout_height="2dp"
        android:layout_marginTop="11dp"
        android:background="#dedede"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_badge"
        app:layout_constraintVertical_bias="0.663" />

</androidx.constraintlayout.widget.ConstraintLayout>